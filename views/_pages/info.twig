{% extends 'main_template.twig' %}

{% block content %}
    {% for infoitem in infoitems %}
    <div class="content__item">
        <h4 class="content__item-title">{{ infoitem.title }}</h4>
        <p class="content__item-date">
            <span class="icon-clock"></span>
            {{ infoitem.date }}
        </p>
        <div class="content__item-text">
            <iframe width="700" height="315" src="https://www.youtube.com/embed/{{ infoitem.youtubesrc }}" frameborder="0" allowfullscreen></iframe>
        </div>
        <p class="content__item-activity">
            <span class="icon-eye"></span>
            Просмотров: {{ infoitem.views }}
            |
            <span class="icon-bubble2"></span>
            Комментариев: {{ infoitem.comments }}
        </p>
    </div>
    {% endfor %}
{% endblock %}